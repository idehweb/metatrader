  "version": "2.0.0",

  "tasks": [
    {
      "label": "launch_metaeditor",
      "type": "shell",
      "windows": {
        "command": "C:\\Program Files\\MetaTrader 5\\metaeditor64.exe /portable"
      },
      "osx": {
        "command": "%PATH% metaeditor64.exe /portable"
      }
    },
    {
      "label": "launch_terminal",
      "type": "shell",
      "windows": {
        "command": "C:\\Program Files\\MetaTrader 5\\terminal64.exe /portable"
      },
      "osx": {
        "command": "%PATH% terminal64.exe /portable"
      }
    },
    {
      "label": "Compile-Project",
      "type": "shell",

      "presentation": {
        "echo": false,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [],
      "args": [
        {
          "value": "${file}",
          "quoting": "strong"
        }
      ],
      "windows": {
        "command": "${workspaceFolder}\\scripts\\Compile-MQL.ps1"
      },
      "osx": {
        "command": "${workspaceFolder}/Compile-MQL.sh"
      }
    },
    {
      "label": "launch_offline_help",
      "type": "shell",
      "presentation": {
        "echo": false,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false
      },
      "args": [
        "mk:@MSITStore:C:\\Users\\GoodBoy\\AppData\\Roaming\\MetaQuotes\\Terminal\\Help\\metaeditor.chm::/${selectedText}.htm"
      ],
      "windows": {
        "command": "hh.exe"
      },
      "osx": {
        "command": "open"
      }
    }
  ]
}
